<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
    crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/css/setting.css">
  <script src="https://kit.fontawesome.com/3dd22133b8.js" crossorigin="anonymous"></script>
  <i class="fa-brands fa-stackpath"></i>
  <title>Settings</title>


</head>

<body>

  <div class="header">
  </div>




  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div id="alerts">
          <%if(alert){%>
            <div class="alert alert-<%= alert.class%>" role="alert">
              <%= alert.text%>
            </div>
            <% } %>
        </div>





        <h1><b>Settings <i class="fa fa-gear fa-spin"></i></b> </h1>

        <b>
          <hr color="black" size="3px">
        </b>

        <div id="card-block" class="col-md-12 pt-2 mt-2">
          <div class="">
            <div>
              <form action="/setting" method="POST" enctype="multipart/form-data">




                <div class="row my-4">
                  <div class="col-md-3">
                    <p class="mx-0 mb-2"><b>ROKU</b></p>
                    <label class="toggle mr-3">
                      <% if (settings.subscription.Roku) { %>
                        <input type="checkbox" name="Roku" value="yes" checked>
                        <% } else { %>
                          <input type="checkbox" name="Roku" value="yes">
                          <% } %>
                            <span class="slider"></span>
                            <span class="labels" data-on="Active" data-off="Inactive"></span>
                    </label>
                  </div>


                  <div class="col-md-3">
                    <p class="mx-0 mb-2"> <b>ANDROID</b></p>
                    <label class="toggle">
                      <% if (settings.subscription.ANDROID) { %>
                        <input type="checkbox" name="ANDROID" value="yes" checked>
                        <% } else { %>
                          <input type="checkbox" name="ANDROID" value="yes">
                          <% } %>
                            <span class="slider"></span>
                            <span class="labels" data-on="Active" data-off="Inactive"></span>
                    </label>
                  </div>



                  <div class="col-md-3">
                    <p class="mx-0 mb-2"><b> APPLE</b></p>
                    <label class="toggle">
                      <% if (settings.subscription.APPLE) { %>
                        <input type="checkbox" name="APPLE" value="yes" checked>
                        <% } else { %>
                          <input type="checkbox" name="APPLE" value="yes">
                          <% } %>
                            <span class="slider"></span>
                            <span class="labels" data-on="Active" data-off="Inactive"></span>
                    </label>
                  </div>

                  <div class="col-md-3">
                    <p class="mx-0 mb-2"> <b>SAMSUNG</b> </p>
                    <label class="toggle ml-1">
                      <% if (settings.subscription.SAMSUNG) { %>
                        <input type="checkbox" name="SAMSUNG" value="yes" checked>
                        <% } else { %>
                          <input type="checkbox" name="SAMSUNG" value="yes">
                          <% } %>
                            <span class="slider"></span>
                            <span class="labels" data-on="Active" data-off="Inactive"></span>
                    </label>
                  </div>





                </div>


            </div>
            <div class="form-group row">
              <label for="Contact" class="col-md-4 col-form-label text-md-right"><b>SUBSCRIPTION</b></label>
              <div class="col-md-6">
                <label class="toggle ml-4 mt-2">
                  <!-- <input type="hidden" name="SAMSUNG" value="no"> -->
                  <% if (settings.sub) { %>
                    <input type="checkbox" name="sub" value="yes" checked>
                    <% } else { %>
                      <input type="checkbox" name="sub" value="yes">
                      <% } %>

                        <span class="slider"></span>
                        <span class="labels" data-on="Active" data-off="Inactive"></span>
                </label>

              </div>
            </div>
            <div class="form-group row">
              <label for="Contact" class="col-md-4 col-form-label text-md-right"><b>LOGIN</b></label>
              <div class="col-md-6">
                <label class="toggle ml-4 mt-2">
                  <!-- <input type="hidden" name="SAMSUNG" value="no"> -->
                  <% if (settings.login) { %>
                    <input type="checkbox" name="login" value="yes" checked>
                    <% } else { %>
                      <input type="checkbox" name="login" value="yes">
                      <% } %>

                        <span class="slider"></span>
                        <span class="labels" data-on="Active" data-off="Inactive"></span>
                </label>

              </div>

            </div>


            <div class="form-group row">
              <label for="Contact" class="col-md-4 col-form-label text-md-right"><b>VIMEO </b></label>
              <div class="col-md-6">
                <label class="toggle ml-4 mt-2">
                  <!-- <input type="hidden" name="SAMSUNG" value="no"> -->
                  <%if (settings.token){ %>
                    <input type="checkbox" name="checkbox1" id="checkbox1" value="yes" checked>
                    <% } else { %>
                      <input type="checkbox" name="checkbox1" id="checkbox1" value="yes">
                      <% } %>
                        <span class="slider"></span>
                        <span class="labels" data-on="Active" data-off="Inactive"></span>
                </label>


              </div>

            </div>
            <%if (settings.token){ %>
              <div class="form-group col-md-6" id="token">
                <label for="exampleInputEmail1 " class=" mx-0 mb-2"><b>Please Enter Token</b></label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                  placeholder="Enter token" name="token" id="tokenName" value="<%=settings.token%>">
                <small id="emailHelp" class="form-text text-muted">We'll never share your token no. with anyone
                  else.</small>
                <br>

                <% } else { %>
                  <div class="form-group col-md-6" id="token" style="display: none">
                    <label for="exampleInputEmail1 " class=" mx-0 mb-2"><b>Please Enter Token</b></label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                      placeholder="Enter token" name="token" id="tokenName">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your token no. with anyone
                      else.</small>
                    <br>

                    <% } %>



                  </div>





                  <button type="submit" class="btn btn-dark float" id="tokenBtn">Submit</button>











                  </form>
              </div>
              <!-- <form action="/logout" method="POST"> -->
              <a class="btn btn-dark col-3" href="/logout" id="logOut">LOG OUT</a>
              <!-- </form> -->
          </div>
        </div>



      </div>

    </div>
  </div>
  </div>





  <div class="sideBar">
    <ul>
      <li><a href="index"><img src="/images/logo.bdfc658d.png" width="80%" height="80%"></a></li>
      <li><a href="/index"><i class="fa fa-home"></i>Home</a></li>
      <li><a href="/categories"><i class="fas fa-user-alt"></i>Categories</a></li>
      <li><a href="/event"><i class="fa fa-play"></i>Events</a></li>
      <li><a href="/videos"><i class="fa fa-play"></i>Videos</a></li>
      <li><a href="/user"><i class="fas fa-user-alt"></i>Users</a></li>

      <li><a class="nav-link dropdown-toggle" href="/setting">
          <i class="fa fa-gear fa-spin"></i> Settings</a></li>


    </ul>




  </div>






  <div class="footer">

  </div>


  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script type="text/javascript">
    $(function () {
      $("#checkbox1").click(function () {
        if ($(this).is(":checked")) {
          $("#token").show();
        } else {
          $("#token").hide();
        }
      });
    });

    // $( function (){
    //   $("#checkbox2").click($("#token2").hide());
    // })
    setTimeout(function () {
      document.getElementById("alerts").remove();
    }, 2000);



  </script>




</body>

</html>